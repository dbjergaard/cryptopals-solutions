class RSAServer
  def initialize()
    @pub_key,@key = RSA.gen_pair(65537)
    issued_before = {}
  end
  def decrypt(cipher_text)
    if issued_before[Digest::SHA2.hex_digest(cipher_text)]
      return "ERROR"
    end
    return RSA.decrypt(cipher_text,@key)
  end
